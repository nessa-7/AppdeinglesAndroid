<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo6"
    tools:context=".Pregunta4">


    <Button
        android:onClick="sonarOne"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/transparente"
        android:text="@string/tituloClic"
        android:textSize="33sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="70dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        >

        <ImageButton
            android:onClick="sonarIncorrecto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/dos" />

        <ImageButton
            android:onClick="sonarIncorrecto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/siete"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        >

        <ImageButton
            android:onClick="sonarIncorrecto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/tres" />

        <ImageButton
            android:onClick="sonarCorrecto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/uno"
            />

    </LinearLayout>

</LinearLayout>